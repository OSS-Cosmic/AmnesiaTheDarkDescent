#define LIGHT_COMMON
#include "deferred_light_resource.h.fsl"

STRUCT(VSInput)
{
	DATA(float3, Position, POSITION);
};

STRUCT(VSOutput)
{
	DATA(float4, Position, SV_Position);
};


VSOutput VS_MAIN(VSInput In )
{
    INIT_MAIN;
    VSOutput Out;

    Out.Position = mul(Get(mvp), float4(In.Position.xyz, 1.0));
	RETURN(Out);
}